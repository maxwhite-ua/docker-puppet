FROM ubuntu:trusty
MAINTAINER Nick Jones "nick@dischord.org"

ENV FACTER_role='horizon'

MOUNT ./puppet:/puppet

ENV DEBIAN_FRONTEND noninteractive

RUN locale-gen en_US en_US.UTF-8 && dpkg-reconfigure locales

RUN apt-get update -q && apt-get install --no-install-recommends -y \
    curl \
    git \
    python-pip \
    ruby-json \
    ruby-dev \
    puppet \
    supervisor \
	&& apt-get -y clean && rm -rf /var/lib/apt/lists/*

RUN gem install hiera-eyaml --no-ri --no-rdoc

RUN puppet apply --verbose \
		--modulepath /puppet/modules \
		--hiera_config /puppet/hiera.yaml \
		--manifestdir /puppet/ /puppet/default.pp

RUN apt-get -y clean && rm -rf /var/lib/apt/lists/*

EXPOSE 80

CMD ["/usr/bin/supervisord", "-n"]

TAG horizon
